@model CodeJobs.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_SimpleLayout.cshtml"; // Correct path to the layout file
    ViewBag.Title = "Register";
}
<section class="vh-100" style="background-color: #eee;">
    <div class="h-100 container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-lg-1 order-2">

                                <p class="h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-center">Sign up</p>

                                @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "mx-1 mx-md-4" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <!-- Name Input -->
                                    <div class="d-flex align-items-center mb-4 flex-row">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Email Input -->
                                    <div class="d-flex align-items-center mb-4 flex-row">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Password Input -->
                                    <div class="d-flex align-items-center mb-4 flex-row">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            <label class="form-label" for="form3Example4c">Password</label>
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Confirm Password Input -->
                                    <div class="d-flex align-items-center mb-4 flex-row">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                            <label class="form-label" for="form3Example4cd">Repeat your password</label>
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!-- Terms and Conditions -->
                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                        <label class="form-check-label" for="form2Example3">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>
                                }
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-lg-2 order-1">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
