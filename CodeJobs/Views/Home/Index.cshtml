
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <form class="d-flex justify-content-center container my-4" role="search" action="#">
        <label class="visually-hidden" for="searchInput">Search</label>
        <input id="searchInput"
               class="form-control rounded-pill me-2 shadow-sm"
               type="search"
               placeholder="Search jobs..."
               aria-label="Search"
               style="max-width: 1200px;" />
        <button class="btn btn-primary rounded-pill px-4" type="submit" style="box-shadow: 0 4px 8px rgba(0,0,0,0.15); transition: background-color 0.3s;">
            Search
        </button>
    </form>


    <div class="d-flex justify-content-center bg-light">
        <img src="~/Content/Images/CodeJobs.png" class="img-fluid img-home" alt="Job illustration" />
    </div>

    <div class="text-dark container text-center" style="padding: 50px;">
        <h1>Welcome to CodeJobs!</h1>
        <p>Create an account or sign in to see your personalized job recommendations.</p>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Register", "Auth")'">Get Started</button>
    </div>
</section>
