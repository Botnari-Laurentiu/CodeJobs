@model CodeJobs.Domain.Entities.JobPost

@{
    ViewBag.Title = "Add Job";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("JobAdd", "Jobs", FormMethod.Post, new { @class = "border p-4 rounded shadow w-50 mx-auto bg-white mb-5 mt-5" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <h2>Basic Job Information</h2>

            <div class="mb-3">
                @Html.LabelFor(m => m.Title, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "4", required = "required" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.CompanyName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.RequiredSkills, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.RequiredSkills, new { @class = "form-control", required = "required" })
            </div>

            <div class="row mb-3">
                <div class="col">
                    @Html.LabelFor(m => m.ExperienceLevel, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.ExperienceLevel,
                        new SelectList(new[] { "Entry-level", "Mid-level", "Senior" }),
                        "Select", new { @class = "form-select", required = "required" })
                </div>

                <div class="col">
                    @Html.LabelFor(m => m.EmploymentType, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.EmploymentType,
                        new SelectList(new[] { "Full-time", "Part-time", "Internship", "Contract" }),
                        "Select", new { @class = "form-select", required = "required" })
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Location, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Location,
                    new SelectList(new[] { "In office", "Remote", "Hybrid" }),
                    "Select", new { @class = "form-select" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.SalaryRange, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.SalaryRange, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ContactEmail, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control", type = "email", required = "required" })
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Post Job</button>
            </div>
        </div>
    }
</div>
