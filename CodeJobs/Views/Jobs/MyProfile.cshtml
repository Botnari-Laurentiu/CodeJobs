@{
    ViewBag.Title = "User Add";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<!-- FORM SECTION -->
<section>
    <div class="container mt-3 p-4 w-75">

        <h2 class="display-5 fw-bold ">My Profile</h2>

        <div class="mb-5 p-4 bg-light rounded shadow-sm">

            <h4 class="text-primary fw-bold mb-3">Personal Info</h4>

            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>First Name:</strong> @Model.FirstName</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Last Name:</strong> @Model.LastName</p>
                </div>
            </div>

            <p><strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Bio:</strong> @Model.Bio</p>

            <hr />

            <h4 class="text-primary fw-bold mb-3">Professional Info</h4>

            <div class="row mb-2">
                <div class="col-md-6">
                    <p><strong>Position:</strong> @Model.JobTitle</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Employment Type:</strong> @Model.EmploymentType</p>
                </div>
            </div>

            <p><strong>Skills:</strong> @Model.Skills</p>

            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Years of Experience:</strong> @Model.ExperienceYears</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Preferred Work Location:</strong> @Model.PreferredLocation</p>
                </div>
            </div>

            <p>
                <strong>LinkedIn:</strong>
                @if (!string.IsNullOrWhiteSpace(Model.LinkedInUrl))
                {
                    <a href="@Model.LinkedInUrl" target="_blank">@Model.LinkedInUrl</a>
                }
                else
                {
                    <span class="text-muted">Not provided</span>
                }
            </p>

            <div class="d-flex justify-content-end mt-4">
                <a href="#" class="btn btn-outline-primary">Edit Profile</a>
            </div>

        </div>

    </div>
</section>