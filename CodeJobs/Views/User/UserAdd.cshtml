@model CodeJobs.Models.UserViewModel

@{
    ViewBag.Title = "User Add";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("UserAdd", "User", FormMethod.Post, new { @class = "border p-4 rounded shadow w-50 mx-auto bg-white mb-5 mt-5" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <h2>Personal info</h2>
            <div class="col-6">
                @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="col-6 mb-3">
                @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="col-6 mb-3">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>
            <div class="col mb-4">
                @Html.LabelFor(m => m.Bio, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", rows = 3 })
            </div>
            <h2>Professional info</h2>
            <div class="col-6 mb-3">
                @Html.LabelFor(m => m.JobTitle, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control" })
            </div>
            <div class="col-6 mb-3">
                @Html.LabelFor(m => m.Skills, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Skills, new { @class = "form-control", placeholder = "e.g., C#, ASP.NET, SQL" })
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.ExperienceYears, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ExperienceYears, new { @class = "form-control", type = "number", min = "0" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.EmploymentType, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.EmploymentType, new SelectList(new[] { "Full-time", "Part-time", "Internship" }), "Select type", new { @class = "form-select" })
                </div>
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.PreferredLocation, new { @class = "form-label" })
                @Html.DropDownListFor(m => m.PreferredLocation, new SelectList(new[] { "In office", "Remote", "Hybrid" }), "Select location", new { @class = "form-select" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.LinkedInProfile, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.LinkedInProfile, new { @class = "form-control" })
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Save Profile</button>
            </div>
        </div>
    }
</div>