@model CodeJobs.Models.UserViewModel

@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<div class="container mt-3 p-4 w-75">
    <h2>Edit Profile</h2>
    @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "mt-4" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.PhoneNumber)
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Bio)
            @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", rows = 3 })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.JobTitle)
            @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Skills)
            @Html.TextBoxFor(m => m.Skills, new { @class = "form-control" })
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.ExperienceYears)
                @Html.TextBoxFor(m => m.ExperienceYears, new { @class = "form-control", type = "number", min = "0" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.EmploymentType)
                @Html.DropDownListFor(m => m.EmploymentType, new SelectList(new[] { "Full-time", "Part-time", "Internship" }), "Select type", new { @class = "form-select" })
            </div>
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.PreferredLocation)
            @Html.DropDownListFor(m => m.PreferredLocation, new SelectList(new[] { "In office", "Remote", "Hybrid" }), "Select location", new { @class = "form-select" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.LinkedInProfile)
            @Html.TextBoxFor(m => m.LinkedInProfile, new { @class = "form-control" })
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    }
</div>