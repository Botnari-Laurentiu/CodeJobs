@model CodeJobs.Models.UserViewModel

@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="w-75 container mt-4">
    <h2>Edit User</h2>
    @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @class = "mt-4" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="row mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Role)
            @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
            <small class="form-text text-muted">Ex: Admin sau User</small>
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.PhoneNumber)
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.JobTitle)
            @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Skills)
            @Html.TextBoxFor(m => m.Skills, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.ExperienceYears)
            @Html.TextBoxFor(m => m.ExperienceYears, new { @class = "form-control", type = "number", min = "0" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.EmploymentType)
            @Html.TextBoxFor(m => m.EmploymentType, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.PreferredLocation)
            @Html.TextBoxFor(m => m.PreferredLocation, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.LinkedInProfile)
            @Html.TextBoxFor(m => m.LinkedInProfile, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Bio)
            @Html.TextAreaFor(m => m.Bio, new { @class = "form-control", rows = 3 })
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    }
</div>
