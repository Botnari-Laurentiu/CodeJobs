@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="container mt-5">
    <h2>Admin Dashboard</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View and manage all users.</p>
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Manage Jobs</h5>
                    <p class="card-text">View and manage all job posts.</p>
                    <a href="@Url.Action("ManageJobs", "Jobs")" class="btn btn-primary">Go to Jobs</a>
                </div>
            </div>
        </div>
    </div>
</div>