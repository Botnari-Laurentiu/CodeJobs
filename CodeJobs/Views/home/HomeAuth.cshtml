@{
    ViewBag.Title = "Home Auth";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<!-- HERO SECTION -->
<section>
    <div class="container-fluid p-5 bg-primary text-white text-center">
        <h1>Find Your IT Job or Recruit Top Talent!</h1>
        <p>Connecting IT professionals with top employers. Discover opportunities or hire skilled developers today.</p>
        <a href="#" class="btn btn-outline-light me-2">Find Jobs</a>
        <a href="#" class="btn btn-outline-light">Post a Job</a>
    </div>

    <!-- SEARCH BAR -->
    <form class="container d-flex my-4 justify-content-center" role="search" action="#">
        <label class="visually-hidden" for="searchInput">Search</label>
        <input id="searchInput"
               class="form-control me-2 rounded-pill shadow-sm"
               type="search"
               placeholder="Search jobs..."
               aria-label="Search"
               style="max-width: 1200px;" />
        <button class="btn btn-primary rounded-pill px-4" type="submit" style="box-shadow: 0 4px 8px rgba(0,0,0,0.15); transition: background-color 0.3s;">
            Search
        </button>
    </form>

    <!-- JOB LISTINGS -->
    <div class="container">
        <h2 class="mb-4">Current Vacancies</h2>
        <div class="row" id="jobs-container">

            <!-- JOB CARD EXAMPLE -->
            <div class="col-md-4 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">Frontend Developer</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Google</h6>
                        <p class="card-text">
                            <strong>Location:</strong> Remote<br>
                            <strong>Type:</strong> Full-time
                        </p>
                        <a href="job-details.html?id=1" class="btn btn-primary btn-sm">More</a>
                    </div>
                </div>
            </div>

            @foreach (var jobPost in Model)
            {
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@jobPost.Title</h5>
                            <p class="card-text">@jobPost.Description</p>
                            <a class="btn btn-primary" href="#">Apply Now</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>